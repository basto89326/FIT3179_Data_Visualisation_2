{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Pre vs Post COVID Tourism Numbers",
    "data": {
        "url": "https://raw.githubusercontent.com/basto89326/FIT3179_Data_Visualisation_2/refs/heads/main/data/tourism_incoming.csv"
    },

    "repeat": {"layer": ["2019", "2024"]},
    "spec": {
        "selection": {
            "year_filter": {
                "type": "multi",
                "fields": ["2019, 2024"],
                "bind": "legend"
            }
        },
        "mark": "bar",
        "encoding": {
            "x": {
                "field": "Country",
                "type": "nominal"
            },

            "y": {
                "aggregate": "sum",
                "field": {"repeat": "layer"},
                "type": "quantitative",
                "title": "Trips ('000)"
            },

            "color": {
                "datum": {"repeat": "layer"}, 
                "title": "Year",
                "legend": {"title": "Year"}
            },

            "opacity": {
                "condition": {"selection": "year_filter", "value": 1},
                "value": 0.2
            },

            "xOffset": {"datum": {"repeat": "layer"}}
        }
    }
}