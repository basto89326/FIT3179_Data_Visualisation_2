{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 200,
    "title": "Reasons for Travel of Incoming Tourists - Year ended June 2024",
    "data": {
        "url": "https://raw.githubusercontent.com/basto89326/FIT3179_Data_Visualisation_2/refs/heads/main/data/travel_reasons_prop.csv"
    },
    "params": [
        {
            "name": "highlight",
            "select": {
                "type": "point",
                "on": "pointerover"
            }
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Reason", 
            "type": "nominal", 
            "sort": {
                "field": "Proportion",
                "order": "descending"
            },
            "scale": {"paddingInner": 0.2}
        },

        "y": {
            "field": "Proportion",
            "type": "quantitative"
        },

        "color": {
            "sort": {
                "field": "Proportion", 
                "order": "descending"
            },

            "condition": {
                "param": "highlight",
                "field": "Reason",
                "type": "nominal",
                "scale": {
                    "scheme": "set1"
                }
            },
            "value": "grey"
        },

        "tooltip": [
            {"field": "Reason", "type": "nominal", "title": "Reason for Travel"},
            {"field": "Proportion", "type": "quantitative", "title": "% of Total"}
        ]
    }
}
