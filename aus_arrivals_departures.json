{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Tourism Numbers 2019 vs 2024",
        "anchor": "middle"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/basto89326/FIT3179_Data_Visualisation_2/refs/heads/main/data/arrivals_departures.csv"
    },
    
    "vconcat": [
        {   
            "width": 480,
            "height": 240,
            "layer": [
                {
                    "mark": "line",
                    "encoding": {
                        "x": {
                            "field": "Month",
                            "type": "temporal",
                            "scale":  {"domain": {"param": "brush"}},
                            "axis": {"title": ""}
                        },

                        "y": {
                            "field": "Value",
                            "type": "quantitative",
                            "title": "People (Millions)"
                        },

                        "color": {
                            "field": "Category",
                            "type": "nominal"
                        },

                        "tooltip": [
                            {"field": "Month", "type": "temporal"},
                            {"field": "Category", "type": "nominal"},
                            {"field": "Value", "type": "quantitative", "title": "People (M)"}
                        ]
                    }
                }
            ]
        },

        {
            "width": 480,
            "height": 60,
            "mark": "line",
            "title": "Use this chart to filter the data based on time",
            "params": [
                {"name": "brush", "select": {"type": "interval","encodings": ["x"]}}
            ],

            "encoding": {
                "x": {
                    "field": "Month",
                    "type": "temporal"
                },

                "y": {
                    "field": "Value",
                    "type": "quantitative",
                    "title": "People"
                },

                "color": {
                    "field": "Category",
                    "type": "nominal"
                },

                "tooltip": [
                    {"field": "Month", "type": "temporal"},
                    {"field": "Category", "type": "nominal"},
                    {"field": "Value", "type": "quantitative", "title": "People (M)"}
                ]
            }
        }
    ]
}
